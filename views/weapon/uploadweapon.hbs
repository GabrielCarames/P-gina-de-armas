<link rel='stylesheet' href='/css/weapon.css' />
<form action="/weapon/uploadweapon" method="POST">
    <h2 style="text-align: center;">Subir publicación</h2>
  <div class="form-row" style="margin-top: 30px;">
    <div class="col-md-6 mb-3">
      <label for="validationServer01">Nombre del arma</label>
      <input type="text" class="form-control" name="name" id="name" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="validationServer02">Descripción</label>
      <input type="text" class="form-control" name="description" id="description" required>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationServer03">Precio</label>
      <input type="text" class="form-control" name="price" id="price"
        aria-describedby="validationServer03Feedback" required>
      <div id="validationServer03Feedback" class="invalid-feedback">
        Por favor ponle un precio mínimo
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationServer04">Condición</label>
      <select name="condition" class="custom-select" id="validationServer04" aria-describedby="validationServer04Feedback"
        required>
        <option selected disabled value="">Elegir</option>
        <option value="nuevo">Nuevo</option>
        <option value="usado">Usado</option>
      </select>
      <div id="validationServer04Feedback" class="invalid-feedback">
        Por favor selecciona un estado de condición
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationServer04">Categoria</label>
      <select name="category" class="custom-select" id="validationServer04" aria-describedby="validationServer04Feedback"
        required>
        <option selected disabled value="">Elegir</option>
        <option value="gun">Pistola</option>
        <option value="assault_rifle">Fusil de asalto</option>
        <option value="shotgun">Escopeta</option>
        <option value="sniper_rifle">Fusil de francotirador</option>
        <option value="submachine_gun">Subfusil</option>
      </select>
      <div id="validationServer04Feedback" class="invalid-feedback">
        Por favor selecciona un estado de condición
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck3"
        aria-describedby="invalidCheck3Feedback" required>
      <label class="form-check-label" for="invalidCheck3">
        Aceptar términos y condiciones
      </label>
      <div id="invalidCheck3Feedback" class="invalid-feedback">
        Debes aceptar los términos y condiciones para publicar
      </div>
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Subir publicación</button>
</form>
<hr id="spacer">