<link rel='stylesheet' href='/css/weapon.css' />
<form action="/weapon/uploadweapon" method="POST">
    <h2 style="text-align: center;">Subir publicación</h2>
  <div class="form-row" style="margin-top: 30px;">
    <div class="col-md-6 mb-3">
      <label for="validationServer01">Nombre del arma</label>
      <input type="text" class="form-control is-valid" name="name" id="name" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="validationServer02">Descripción</label>
      <input type="text" class="form-control is-valid" name="description" id="description" required>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationServer03">Precio</label>
      <input type="text" class="form-control is-valid" name="price" id="price"
        aria-describedby="validationServer03Feedback" required>
      <div id="validationServer03Feedback" class="invalid-feedback">
        Por favor ponle un precio mínimo
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationServer04">Estado</label>
      <select class="custom-select is-invalid" id="validationServer04" aria-describedby="validationServer04Feedback"
        required>
        <option selected disabled value="">Elegir</option>
        <option>Nuevo</option>
        <option>Usado</option>
      </select>
      <div id="validationServer04Feedback" class="invalid-feedback">
        Please select a valid state.
      </div>
    </div>
    <div class="input-group is-invalid">
      <div class="custom-file">
        <input type="file" class="custom-file-input" id="validatedInputGroupCustomFile" <!--required-->>
        <label class="custom-file-label" for="validatedInputGroupCustomFile">Elegir imagen</label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input is-invalid" type="checkbox" value="" id="invalidCheck3"
        aria-describedby="invalidCheck3Feedback" required>
      <label class="form-check-label" for="invalidCheck3">
        Aceptar términos y condiciones
      </label>
      <div id="invalidCheck3Feedback" class="invalid-feedback">
        Debes aceptar los términos y condiciones para publicar
      </div>
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Submit form</button>
</form>
<hr id="spacer">